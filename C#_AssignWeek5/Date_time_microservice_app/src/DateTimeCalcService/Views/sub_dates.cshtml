    <p>year:</p>
    <select name="year2" id="year2">
        @for (var i = 1900; i <= 2020; i++)
        {
            <option value="@i">@i</option>
        }
    </select>

    <p>hr:</p>
    <select name="hr2" id="hr2">
        @for (var i = 0; i <= 23; i++)
        {
            <option value="@i">@i</option>
        }
    </select>

    <p>min:</p>
    <select name="min2" id="min2">
        @for (var i = 0; i <= 59; i++)
        {
            <option value="@i">@i</option>
        }
