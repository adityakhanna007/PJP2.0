
@{
    ViewBag.Title = "add_sub_dates";
}

<h2>Subtract Dates</h2>
<br />
<h4 id="result">@ViewBag.ans</h4>
<br />
@using (Html.BeginForm("sub_dates", "Home", FormMethod.Post))
{
    <h3>Date 1:</h3>
    <p>date:</p>
    <select name="date1" id="date1">
        @for (var i = 1; i <= 31; i++)
        {
            <option value="@i" >@i</option>
        }
    </select>

    <p>month:</p>
    <select name="month1" id="month1">
        @for (var i = 1; i <= 12; i++)
        {
            <option value="@i">@i</option>
        }
    </select>

    <p>year:</p>
    <select name="year1" id="year1">
        @for (var i = 1900; i <= 2020; i++)
        {
            <option value="@i">@i</option>
        }
    </select>

    <p>Hr:</p>
    <select name="hr1" id="hr1">
        @for (var i = 0; i <= 23; i++)
        {
            <option value="@i">@i</option>
        }
    </select>

    <p>min:</p>
    <select name="min1" id="min1">
        @for (var i = 0; i <= 59; i++)
        {
            <option value="@i">@i</option>
        }
    </select>

    <p>sec:</p>
    <select name="sec1" id="sec1">
        @for (var i = 0; i <= 59; i++)
        {
            <option value="@i">@i</option>
        }
    </select>
    <br>
    <br>
